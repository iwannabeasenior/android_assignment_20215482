<androidx.constraintlayout.widget.ConstraintLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:titleTextColor="@color/white"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_number"
        android:gravity="center|right"
        android:text="0"
        tools:text = "0"
        android:background="@color/grey"
        android:textSize="50sp"
        android:paddingEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="500px"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_number"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bt_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_1_1"
                android:text="CE"
                android:textSize="25sp"
                android:background="@drawable/button_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_1_2"
                android:text="C"
                android:textSize="25sp"
                android:background="@drawable/button_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toRightOf="@id/bt_1_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_1_3"
                android:text="BS"
                android:textSize="25sp"
                android:background="@drawable/button_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toRightOf="@id/bt_1_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_1_4"
                android:text="/"
                android:textSize="25sp"
                android:background="@drawable/button_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toRightOf="@id/bt_1_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bt_2"
            app:layout_constraintTop_toBottomOf="@id/bt_1"
            app:layout_constraintHeight_percent="0.2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_2_1"
                android:text="7"
                android:textSize="25sp"
                android:background="@drawable/button_light_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_2_2"
                android:text="8"
                android:textSize="25sp"
                android:background="@drawable/button_light_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toRightOf="@id/bt_2_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_2_3"
                android:text="9"
                android:textSize="25sp"
                android:background="@drawable/button_light_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toRightOf="@id/bt_2_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_2_4"
                android:text="x"
                android:textSize="25sp"
                android:background="@drawable/button_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toRightOf="@id/bt_2_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bt_3"
            app:layout_constraintTop_toBottomOf="@id/bt_2"
            app:layout_constraintHeight_percent="0.2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_3_1"
                android:text="4"
                android:textSize="25sp"
                android:background="@drawable/button_light_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_3_2"
                android:text="5"
                android:textSize="25sp"
                android:background="@drawable/button_light_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toRightOf="@id/bt_3_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_3_3"
                android:text="6"
                android:textSize="25sp"
                android:background="@drawable/button_light_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toRightOf="@id/bt_3_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_3_4"
                    android:text="-"
                android:textSize="25sp"
                android:background="@drawable/button_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toRightOf="@id/bt_3_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bt_4"
            app:layout_constraintTop_toBottomOf="@id/bt_3"
            app:layout_constraintHeight_percent="0.2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_4_1"
                android:text="1"
                android:textSize="25sp"
                android:background="@drawable/button_light_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_4_2"
                android:text="2"
                android:textSize="25sp"
                android:background="@drawable/button_light_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toRightOf="@id/bt_4_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_4_3"
                android:text="3"
                android:textSize="25sp"
                android:background="@drawable/button_light_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toRightOf="@id/bt_4_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_4_4"
                android:text="+"
                android:textSize="25sp"
                android:background="@drawable/button_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toRightOf="@id/bt_4_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bt_5"
            app:layout_constraintTop_toBottomOf="@id/bt_4"
            app:layout_constraintHeight_percent="0.2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_5_1"
                android:text="+/-"
                android:textSize="25sp"
                android:background="@drawable/button_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_5_2"
                android:text="0"
                android:textSize="25sp"
                android:background="@drawable/button_light_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toRightOf="@id/bt_5_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_5_3"
                android:text="."
                android:textSize="25sp"
                android:background="@drawable/button_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toRightOf="@id/bt_5_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_5_4"
                android:text="="
                android:textSize="25sp"
                android:background="@drawable/button_grey"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintLeft_toRightOf="@id/bt_5_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>